{{page-title 'Identity'}}

<h1 class="identity-heading">
    Identity Service Verification
</h1>
<div class="identity-container">
    <div class="input-div">
       <label>Identity Url</label>
       <Input @value={{this.identityURL}} type="text" placeholder="service url" />
       <button    
        type="submit"
        class="identity-Buttons edit"
        {{on 'click' (fn this.handleEdit)}}>
        Edit
        </button> 
    </div>

    <div class="chaincode-div">
        <label class="identity-label">
           Generate Chaincode
            {{#if this.isChaincodeClicked }}
            <label class="chaincode">{{this.Chaincode}}</label>

            {{#if this.isCopyClicked }}
            <Input
                class='copy-button'
                type="button"
                @value={{this.Code}}/>
            {{else}}
            <Input
                class='copy-button'
                type="button"
                @value={{this.Code}}
                {{on 'click' (fn this.handleCopy)}}/>
            {{/if}}

            {{else}}
            <Input
                class='identity-Buttons'
                type="button"
                @value={{this.Chaincode}}
                {{on 'click' (fn this.handleChaincode)}}/>
            {{/if}}
        </label>
    </div>
    
    <label class="identity-label">
        Click here to verify
        <Input @type="checkbox" @checked={{this.isChecked}} />
    </label>
    <button
        type="submit"
        class="identity-verify-btn"
        {{on 'click' (fn this.handleVerify)}}>
        Verify
    </button>
</div>
